{
  "name": "linkify",
  "version": "1.0.0",
  "description": "Linkify is a management system for borrowing Lego Spike, Arduino, and Raspberry Pi equipment. It allows users to send loan requests, including equipment and user details, managed by an administrator who can finalize the loans. Loan data is stored and displayed to the administrator.",
  "main": "./out/main/index.js",
  "author": "Eric Jared Villeda Reyes",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "dist": "electron-builder"
  },
  "build": {
    "asar": true,
    "asarUnpack": "**/*.docx"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@iconify/tools": "^4.0.0",
    "@nextui-org/react": "^2.2.9",
    "@nextui-org/use-infinite-scroll": "^2.1.3",
    "@types/node": "^18.19.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "docxtemplater": "^3.46.2",
    "formik": "^2.4.5",
    "framer-motion": "^11.0.3",
    "ldrs": "^1.0.1",
    "nodemailer": "^6.9.13",
    "pizzip": "^3.1.6",
    "promise-mysql": "^5.2.0",
    "react-router-dom": "^6.21.3",
    "uuid": "^10.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@iconify/react": "^4.1.1",
    "@types/node": "^18.19.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animated": "^1.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "include": [
    "src/**/*",
    "../renderer/src/store/*"
  ]
}
